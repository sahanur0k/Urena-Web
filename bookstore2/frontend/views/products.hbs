        const productData = {
          1: {
            title: 'Paracetamol',
            category: 'Pain Relief',
            price: '₹50',
            description: 'Pain reliever and fever reducer for mild to moderate pain. Effective for headaches, toothaches, backaches, menstrual cramps, and minor arthritis pain.',
